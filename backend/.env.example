# API Mode Configuration
USE_MOCK_API=false

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=edurag
POSTGRES_USER=edurag_user
POSTGRES_PASSWORD=edurag_password

# Database URL for SQLAlchemy
DATABASE_URL=postgresql+asyncpg://edurag_user:edurag_password@localhost:5432/edurag

# LLM Provider Configuration
LLM_PROVIDER=openai  # openai 或 anthropic

# OpenAI Configuration (當 LLM_PROVIDER=openai 時使用)
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic Configuration (當 LLM_PROVIDER=anthropic 時使用)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# pgAdmin Configuration
PGADMIN_EMAIL=admin@edurag.com
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=5050

# Vector Database Configuration
VECTOR_DIMENSION=1536